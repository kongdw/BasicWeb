<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!--默认情况下，sitemesh 只对 HTTP 响应头中 Content-Type 为 text/html 的类型进行拦截和装饰，可以添加更多的 mime 类型-->
    <mime-type>text/html</mime-type>
    <mime-type>application/xhtml+xml</mime-type>

    <mapping path="/login*" decorator="/WEB-INF/jsp/layout/admin-login.jsp" />
    <mapping path="/**/edit*" decorator="/WEB-INF/jsp/layout/body.jsp" />
    <mapping path="/admin/*" decorator="/WEB-INF/jsp/layout/admin-index.jsp" />
    <mapping path="/showcase/*" decorator="/WEB-INF/jsp/layout/admin-index.jsp" />

    <!-- 不被sitemesh装饰的路径 -->
    <mapping path="/static/*" exclue="true"/>
    <mapping path="/api/*" exclue="true"/>
    <mapping path="*" exclue="true" />
</sitemesh>